
@{
    ViewData["Title"] = "Dasboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="span9">
    <ul class="breadcrumb">
        <li><a asp-action="index" asp-controller="home">Home</a> <span class="divider">/</span></li>
        <li class="active">Invoice Management</li>
    </ul>

    <section id="Table">
        <div class="page-header">
            <h3>Invoice Management </h3>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoices in ViewBag.invoices)
                        {
                            <tr>
                                <td>@invoices.Id</td>
                                <td>@invoices.Name</td>
                                <td>@invoices.Created.ToString("dd/MM/yyyy")</td>
                                <td>@(invoices.Status == true ? "Pending" : "Done")</td>
                                <td><a asp-controller="customer" asp-action="details" asp-route-id="@invoices.Id">Details</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

