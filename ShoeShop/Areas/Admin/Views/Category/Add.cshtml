
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model ShoeShop.Models.Category

<section class="content-header">
    <h1>
        Add Category
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Category Infomation</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" method="post" asp-area="admin" asp-action="add" asp-controller="category">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name">Name category</label>
                            <input type="text" class="form-control" id="name" placeholder="Name category" asp-for="Name" required>
                        </div>
                        
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status">Status
                            </label>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
