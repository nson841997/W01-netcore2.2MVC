
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model ShoeShop.Models.Photo

<section class="content-header">
    <h1>
        Edit Photo of @ViewBag.product.Name
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Slideshow Infomation</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" method="post" asp-area="admin" asp-action="edit" asp-controller="photo" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputFile">Photo</label>
                            <input type="file" id="exampleInputFile" accept="image/*" name="fileUpload">
                            <br />
                            <img src="~/product/@Model.Name" width="120" />
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status">Status
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Featured">Featured
                            </label>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ProductId" />
                    </div>
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
